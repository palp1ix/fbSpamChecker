{
  "manifest_version": 3,
  "name": "Spam Authomizer",
  "version": "1.2",
  "description": "Автоматически переключает вкладки и нажимает кнопку Send на Facebook",
  "permissions": [
    "tabs",
    "activeTab",
    "identity",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icons8-scam-parzival’-1997-outline-color-16.png",
      "32": "icons/icons8-scam-parzival’-1997-outline-color-32.png",
      "96": "icons/icons8-scam-parzival’-1997-outline-color-96.png"
    }
  },
  "icons": {
    "16": "icons/icons8-scam-parzival’-1997-outline-color-16.png",
    "32": "icons/icons8-scam-parzival’-1997-outline-color-32.png",
    "96": "icons/icons8-scam-parzival’-1997-outline-color-96.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["auth.js"],
      "matches": ["<all_urls>"]
    }
  ],
"content_security_policy": {
    "extension_pages": "script-src 'self' ; object-src 'self'"
  }
}